<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardElevation="5dp"
        android:padding="5dp"
        app:cardCornerRadius="5dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardElevation="5dp"
        android:padding="5dp"
        app:cardCornerRadius="5dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cirLoginButton"
            android:gravity="center"
            android:text="Take Ride"
            style="@style/loginButton"
            android:layout_margin="3dp"
            android:layout_gravity="end"/>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:padding="5dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:padding="5dp"
            android:id="@+id/wifi_id"
            android:src="@drawable/wifi_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/charging_id"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:src="@drawable/wifi_not_avaliable"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/tv_id"
            android:src="@drawable/wifi_available"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:padding="5dp"
            android:src="@drawable/wifi_not_avaliable"
            android:id="@+id/headset_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:padding="5dp"
            android:id="@+id/reading_light_id"
            android:src="@drawable/wifi_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:padding="5dp"
            android:id="@+id/blanket"
            android:src="@drawable/wifi_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:padding="5dp"
            android:src="@drawable/wifi_not_avaliable"
            android:id="@+id/newspaper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@drawable/wifi_not_avaliable"
            android:id="@+id/movie"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>